<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SuccessSubmitActivity">

    <ImageView
        android:id="@+id/img_success"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:importantForAccessibility="no"
        android:src="@drawable/correct"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/success_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/success_submit"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/img_success"
        app:layout_constraintStart_toStartOf="@+id/img_success"
        app:layout_constraintTop_toBottomOf="@+id/img_success" />

    <Button
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/return_to_home"
        app:layout_constraintEnd_toEndOf="@+id/img_success"
        app:layout_constraintStart_toStartOf="@+id/img_success"
        app:layout_constraintTop_toBottomOf="@+id/success_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>